{
  "name": "idem-workspace",
  "version": "1.0.0",
  "private": true,
  "description": "Idem monorepo workspace",
  "workspaces": [
    "apps/main-app",
    "apps/chart",
    "apps/appgen",
    "apps/api"
  ],
  "scripts": {
    "postinstall": "husky install || true",
    "install:all": "npm install --workspaces",
    "dev:chart": "npm run dev --workspace=mermaid-live-editor",
    "dev:appgen-next": "npm run dev:next --workspace=we-dev",
    "dev:appgen-client": "npm run dev:client --workspace=we-dev",
    "dev:api": "npm run dev --workspace=idem-api",
    "build:main-app": "npm run build --workspace=idem",
    "dev:main-app": "npm run dev --workspace=idem",
    "build:chart": "npm run build --workspace=mermaid-live-editor",
    "build:appgen-next": "npm run build:next --workspace=we-dev",
    "build:appgen-client": "npm run build:client --workspace=we-dev",
    "build:api": "npm run build --workspace=idem-api",
    "build:all": "npm run build:main-app && npm run build:chart && npm run build:appgen && npm run build:api",
    "test:all": "npm run test --workspaces --if-present",
    "lint:all": "npm run lint --workspace=idem --workspace=idem-api --workspace=we-dev --if-present",
    "lint:fix": "npm run lint:fix --workspace=idem --workspace=idem-api --workspace=we-dev --if-present",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "npm run clean --workspaces --if-present"
  },
  "dependencies": {
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
