{
  "name": "idem-workspace",
  "version": "1.0.0",
  "private": true,
  "description": "Idem monorepo workspace",
  "workspaces": [
    "apps/landing",
    "apps/main-dashboard",
    "apps/chart",
    "apps/appgen",
    "apps/api",
    "packages/shared-models",
    "packages/shared-auth-client",
    "packages/shared-styles"
  ],
  "scripts": {
    "postinstall": "husky install || true",
    "install:all": "npm install --workspaces",
    "prepare:packages": "npm run build:shared && npm run build:shared-auth",
    "dev:chart": "pnpm run dev --workspace=mermaid-live-editor",
    "dev:appgen-next": "npm run dev:next --workspace=we-dev",
    "dev:appgen-client": "npm run dev:client --workspace=we-dev",
    "dev:api": "npm run dev --workspace=idem-api",
    "build:landing": "npm run build --workspace=landing",
    "dev:landing": "npm run dev --workspace=landing",
    "build:dashboard": "npm run build --workspace=main-dashboard",
    "dev:dashboard": "npm run start --workspace=main-dashboard",
    "build:chart": "pnpm run build --workspace=mermaid-live-editor",
    "build:appgen-next": "npm run build:next --workspace=we-dev",
    "build:appgen-client": "npm run build:client --workspace=we-dev",
    "build:api": "npm run build --workspace=idem-api",
    "build:shared": "npm run build --workspace=@idem/shared-models",
    "build:shared-auth": "npm run build --workspace=@idem/shared-auth-client",
    "build:shared-styles": "npm run build --workspace=@idem/shared-styles",
    "lint:api": "npm run lint --workspace=idem-api",
    "lint:dashboard": "npm run lint --workspace=main-dashboard",
    "lint:landing": "npm run lint --workspace=landing",
    "lint:appgen-next": "npm run lint:next --workspace=we-dev",
    "lint:appgen-client": "npm run lint:client --workspace=we-dev",
    "lint:chart": "pnpm run lint --workspace=mermaid-live-editor",
    "lint:shared": "npm run lint --workspace=@idem/shared-models",
    "lint:shared-auth": "npm run lint --workspace=@idem/shared-auth-client",
    "lint:shared-styles": "npm run lint --workspace=@idem/shared-styles",
    "build:all": "npm run build:shared && npm run build:shared-auth && npm run build:landing && npm run build:dashboard && npm run build:chart && npm run build:appgen-client && npm run build:api && npm run build:appgen-next",
    "test:all": "npm run test --workspaces --if-present",
    "lint:all": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "npm run clean --workspaces --if-present"
  },
  "dependencies": {
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
