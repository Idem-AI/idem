# ============================================
# IDEM SaaS Configuration
# ============================================

# IDEM API URL for authentication
# Development: http://localhost:3001
# Production: https://api.idem.africa
IDEM_API_URL=http://localhost:3001

# JWT Authentication (shared with main API)
JWT_SECRET=your-shared-jwt-secret-key-here
JWT_EXPIRATION=1440

# Server Selection Strategy
# Options: least_loaded, round_robin, random
IDEM_SERVER_STRATEGY=least_loaded

# Default subscription plan for new teams
IDEM_DEFAULT_PLAN=free

# Auto-sync quotas after actions
IDEM_AUTO_SYNC_QUOTAS=true

# Admin Settings
IDEM_ADMIN_BYPASS_QUOTAS=true
IDEM_ADMIN_SEE_ALL_SERVERS=true

# Stripe Integration (optional)
IDEM_STRIPE_ENABLED=false
STRIPE_KEY=pk_test_your_publishable_key
STRIPE_SECRET=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (if using Stripe)
STRIPE_PRICE_ID_BASIC_MONTHLY=price_xxxxxxxxxxxxx
STRIPE_PRICE_ID_PRO_MONTHLY=price_xxxxxxxxxxxxx
STRIPE_PRICE_ID_ENTERPRISE_MONTHLY=price_xxxxxxxxxxxxx

# External API Integration (optional)
IDEM_EXTERNAL_API_ENABLED=false
IDEM_EXTERNAL_API_URL=https://api.example.com
IDEM_EXTERNAL_API_TIMEOUT=30

# Feature Flags
IDEM_FEATURE_MANAGED_SERVERS=true
IDEM_FEATURE_PERSONAL_SERVERS=true
IDEM_FEATURE_QUOTA_ENFORCEMENT=true
IDEM_FEATURE_ADMIN_DASHBOARD=true

# Notifications
IDEM_NOTIFICATIONS_EMAIL_ENABLED=true
IDEM_SLACK_WEBHOOK_URL=
IDEM_DISCORD_WEBHOOK_URL=
