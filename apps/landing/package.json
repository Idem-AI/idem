{
  "name": "landing",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0 --port 4201",
    "dev": "ng serve --host 0.0.0.0 --port 4201",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "serve:ssr:landing": "node dist/landing/server/server.mjs",
    "i18n:extract": "ng extract-i18n",
    "i18n:extract:json": "ng extract-i18n --format=json --output-path=src/locale",
    "i18n:organize": "node scripts/organize-i18n-by-components.js",
    "i18n:merge": "node scripts/merge-i18n-components.js",
    "i18n:workflow": "npm run i18n:extract:json && npm run i18n:organize",
    "start:fr": "ng serve --configuration=fr --host 0.0.0.0 --port 4201",
    "start:en": "ng serve --configuration=en --host 0.0.0.0 --port 4201",
    "build:fr": "ng build --configuration=production-fr",
    "build:en": "ng build --configuration=production-en",
    "build:all-locales": "npm run i18n:merge && npm run build:en && npm run build:fr"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.9",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/fire": "^20.0.0",
    "@angular/forms": "^20.3.0",
    "@angular/localize": "^20.3.9",
    "@angular/platform-browser": "^20.3.0",
    "@angular/platform-server": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@angular/ssr": "^20.3.5",
    "@idem/shared-models": "file:../../packages/shared-models",
    "@idem/shared-styles": "file:../../packages/shared-styles",
    "@primeng/themes": "^20.0.0",
    "@tailwindcss/postcss": "^4.0.15",
    "express": "^5.1.0",
    "postcss": "^8.5.3",
    "primeicons": "^7.0.0",
    "primeng": "^20.1.1",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.0.15",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.5",
    "@angular/cli": "^20.3.5",
    "@angular/compiler-cli": "^20.3.0",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.17.19",
    "angular-eslint": "20.5.1",
    "eslint": "^8.57.1",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.46.2"
  }
}
