{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@idem/shared-models": ["../shared-models/src"],
      "@idem/shared-models/*": ["../shared-models/src/*"]
    }
  },
  "references": [{ "path": "../shared-models" }],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
