{
  "name": "idem/shared-auth-php",
  "description": "Shared authentication and authorization package for Idem PHP backends",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Idem Team",
      "email": "dev@idem.africa"
    }
  ],
  "require": {
    "php": "^8.1",
    "guzzlehttp/guzzle": "^7.8",
    "illuminate/support": "^10.0|^11.0|^12.0",
    "illuminate/http": "^10.0|^11.0|^12.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "orchestra/testbench": "^8.0|^9.0"
  },
  "autoload": {
    "psr-4": {
      "Idem\\SharedAuth\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Idem\\SharedAuth\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Idem\\SharedAuth\\Laravel\\IdemAuthServiceProvider"
      ]
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
